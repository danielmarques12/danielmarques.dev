---
import Layout from '../layouts/Layout.astro'
import SocialMediaButton from '../components/social-media-button.astro'
import SMBExperiment from '../components/smb-experiment.astro'
import Laracast from '../components/laracast.astro'
import { SMB } from '../components/smb'
---

<Layout title="Daniel Marques - Software Engineer">
	<main class="mx-auto p-24 text-center md:max-w-5xl md:text-left">
		<div class="flex flex-col-reverse gap-12 md:flex-row md:gap-20">
			<div class="flex flex-col gap-6">
				<h1 class="text-5xl font-semibold">DANIEL MARQUES</h1>
				<h2 class="text-2xl font-medium">
					Software Engineer at <a
						class="underline hover:text-gray-500"
						href="https://www.therealreal.com/"
						target="_blank">The RealReal</a
					>
				</h2>

				<p class="text-justify text-lg leading-8 text-gray-600">
					Hey there! I'm Daniel, a passionate Full-stack Software Engineer with
					a keen eye for detail and a drive to deliver top-notch software
					solutions. Whether it's building from scratch or refining existing
					systems, I'm dedicated to ensuring high quality and user-friendly
					experiences every step of the way. Let's create something amazing
					together!
				</p>

				<div class="mx-auto flex flex-col gap-8 md:flex-row">
					<SMBExperiment />

					<!-- <SMB client:load /> -->

					<!-- <Laracast /> -->
				</div>
			</div>

			<img
				class="mx-auto h-[360px] w-[270px] rounded-2xl border-[6px] border-b-[14px] border-r-[10px] border-black"
				src="me.png"
				alt="picture of me"
			/>
		</div>
	</main>
</Layout>
