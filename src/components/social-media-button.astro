---
export interface Props {
	id: 'github' | 'linkedin'
	label: 'GitHub' | 'LinkedIn'
	url: string
}

const { id, url, label } = Astro.props
---

<a href={url} target="_blank">
	<div
		class="group h-20 w-64 cursor-pointer rounded-2xl border-[2px] border-black bg-pink-500"
	>
		<div
			class="group h-20 w-64 transform cursor-pointer rounded-2xl border-[2px] border-black bg-white transition-transform group-hover:translate-x-[-12px] group-hover:translate-y-[-12px] group-focus:translate-x-[-12px] group-focus:translate-y-[-12px]"
		>
			<button
				class="flex h-20 w-64 transform items-center justify-center gap-4 self-stretch rounded-2xl bg-black font-semibold text-white ring-1 ring-black ring-offset-4 ring-offset-black transition-transform duration-[400ms] group-hover:translate-x-[-18px] group-hover:translate-y-[-18px] group-focus:translate-x-[-18px] group-focus:translate-y-[-18px]"
			>
				<p class="text-2xl">{label}</p>
				<img src={`${id}.svg`} alt={`${id} logo`} />
			</button>
		</div>
	</div>
</a>
